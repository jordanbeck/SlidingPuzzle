<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextAppearance" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/fontPrimary</item>
    </style>

    <style name="AppTheme.TextAppearance.SizeLabel">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextAppearance.Stat">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Difficulty">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextAppearance.PuzzlePiece">
        <!-- DP is used here because font needs to avoid scaling -->
        <item name="android:textSize" tools:ignore="SpUsage">24dp</item>
        <item name="android:fontFamily">monospace</item>
    </style>

</resources>
